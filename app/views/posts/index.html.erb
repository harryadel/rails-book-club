<% content_for :page_title, "Index" %>

<div class="card">
  <% @posts.each do |post| %>
  <div class="card-body">
    <div class="card-title">
      <%= link_to post.title, post, class: "card-link"  %>
      <p class="card-text"><%= post.comments.count %> comments</p>
    </div>
  </div>
  <% end %>
</div>