<% content_for :page_title, @post.title %>

<section>
  <div class="container">
    <% if current_user && current_user.id == @post.user_id %>
    <nav class="nav">
      <%= link_to "Edit", edit_post_path(@post), class:"btn btn-light" %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
    </nav>
    <hr />
    <% end %>
    <div class="content">
      <%= @post.content %>
    </div>
  </div>
</section>

<section class="section comments">
  <div class="container">
    <h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comments</h2>
    <%= render @post.comments %>
    <% if current_user %>
    <div class="comment-form">
      <hr />
      <h3 class="subtitle is-3">Leave a reply</h3>
      <%= render 'comments/form' %>
    </div>
    <% end %>
  </div>
</section>